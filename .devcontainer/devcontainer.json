{
    "name": "devcontainer-template",
    "build": {
        "context": ".",
        "dockerfile": "Dockerfile"
    },
    "postCreateCommand": "scripts/setup.sh",
    "containerEnv": {
        "MISE_GITHUB_TOKEN": "${localEnv:MISE_GITHUB_TOKEN}"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "tamasfe.even-better-toml",
                "christian-kohler.path-intellisense",
                "redhat.vscode-yaml",
                "hverlin.mise-vscode"
            ]
        }
    }
}
